@page
@model MyApp.Namespace.SupportModel

<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom px-4">
    <div class="container-fluid">
        <h5 class="mb-0">Soporte</h5>
        <div>
            <button class="btn btn-outline-primary btn-sm"><a asp-page="CreateTicket">Crear ticket</a></button>
        </div>
    </div>
</nav>
<hr />

@if (Model.Tickets != null && Model.Tickets.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    <checkbox />
                </th>
                <th>Titulo</th>
                <th>Status</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model.Tickets)
            {
                <tr>
                    <td>
                        <checkbox />
                    </td>
                    <td>@ticket.Subject</td>
                    <td>@ticket.Status</td>
                    <td>@ticket.CreatedAt.ToString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No existen tickets de soporte.</p>
}