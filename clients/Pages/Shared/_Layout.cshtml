<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Jericalla Mobile | @ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/clients.styles.css" asp-append-version="true" />
</head>

<body>

    @{
        var whereIAm = Environment.GetEnvironmentVariable("WHEREIAM") ?? "Unknown";
    }

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar shade-25 p-3">
            <h4 class="text-white">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/logo4-2.png" height="50" /></a>
            </h4>
            <a class="navbar-brand" asp-area="" asp-page="/Index">Inicio</a>
            <a class="nav-link text-light" href="#">Mi Plan</a>
            <a class="nav-link text-light" href="#">Facturas</a>
            <a class="nav-link text-light" href="#">Dispositivos</a>
            <a class="nav-link text-light" asp-area="" asp-page="/Support">Soporte</a>
            <a class="nav-link text-light" href="#">Configuración</a>
            <a class="nav-link text-light" href="#">Salir</a>
        </div>

        <!-- Main Content -->

        <div class="flex-grow-1">


            <div class="container py-4">
                <main role="main">
                    @RenderBody() 


                </main>
            </div>
        </div>


        <footer class="border-top footer shade-25 text-white">
            <div class="container">
                &copy; 2025 - Jericalla Mobile
                <p>
                    <span class="badge rounded-pill bg-success fixed-bottom">Hosted @whereIAm</span>
                </p>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
            crossorigin="anonymous"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
