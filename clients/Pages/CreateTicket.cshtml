@page
@model MyApp.Namespace.CreateTicketModel
@{
}
<form method="post">
    <div class="form-group">
        <label asp-for="Ticket.Subject">Título</label>
        <input asp-for="Ticket.Subject" class="form-control" />
        <span asp-validation-for="Ticket.Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ticket.Description">Descripción</label>
        <textarea asp-for="Ticket.Description" class="form-control"></textarea>
        <span asp-validation-for="Ticket.Description" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}